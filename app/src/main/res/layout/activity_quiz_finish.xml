<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizFinish">

    <include
        android:id="@+id/toolbar"
        layout="@layout/activity_toolbar" />

    <TextView
        android:id="@+id/quizAttemptTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Congradulations 'username' you have completed the 'topic' quiz with ? correct and ? incorrect answers or ? points for this attempt. \nOverall you have ? points"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/backToQuizSelectionButton"
        android:layout_width="349dp"
        android:layout_height="86dp"
        android:text="Back To Quizzes"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/QuizFinishSeePreviousAttempts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redoQuizButton" />

    <Button
        android:id="@+id/QuizFinishSeePreviousAttempts"
        android:layout_width="349dp"
        android:layout_height="86dp"
        android:layout_marginBottom="68dp"
        android:text="Show previous Attempts"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/quizAttemptLoggOffButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backToQuizSelectionButton" />

    <Button
        android:id="@+id/quizAttemptLoggOffButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizAttemptTitle"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/redoQuizButton"
        android:layout_width="349dp"
        android:layout_height="86dp"
        android:text="Try it again!"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/backToQuizSelectionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizAttemptTitle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="288dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/barinlogo" />

</androidx.constraintlayout.widget.ConstraintLayout>